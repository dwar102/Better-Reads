textarea {
  width: 30%
  height: 150px;
  padding: 12px 20px;
  box-sizing: border-box;
  border: 2px solid #ccc;
  border-radius: 4px;
  background-color: #f8f8f8;
  resize: none;
}
h2 {
  padding: 60px;
  text-decoration: underline;
  text-shadow: 2px 2px 5px grey;
  font-size: 30px;
}
textarea:hover {
    background-color: grayscale;
}